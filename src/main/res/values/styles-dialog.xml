<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarSize">0dp</item>
        <item name="windowNoTitle">true</item>
        <!-- 无标题，设置的是decorview的背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 默认是有阴影背景的,加以下属性可以改变阴影度阴影 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置状态栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="dialog_theme_fullscreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarSize">0dp</item>
        <item name="windowNoTitle">true</item>
        <!-- 无标题，设置的是decorview的背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 默认是有阴影背景的,加以下属性可以改变阴影度阴影 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置状态栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="dialog_anim_bottom_center" parent="android:Animation">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/anim_dialog_btc</item>
        <!-- 退出时的动画 -->
        <item name="android:windowExitAnimation">@anim/anim_dialog_ctb</item>
    </style>

    <style name="dialog_anim_right_left" parent="android:Animation">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/anim_dialog_rtl</item>
        <!-- 退出时的动画 -->
        <item name="android:windowExitAnimation">@anim/anim_dialog_ltr</item>
    </style>

</resources>